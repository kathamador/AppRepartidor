<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ActivityMapa">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/layoutHeader"
        android:layout_width="match_parent"
        android:layout_height="74dp"
        android:layout_gravity="center"
        android:background="@drawable/header_backgroud"
        app:layout_constraintTop_toTopOf="parent">

        <ImageButton
            android:id="@+id/btnRegresar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginTop="15dp"
            android:layout_marginBottom="45dp"
            android:background="@color/colorPrimary"
            android:clickable="true"
            android:focusable="true"
            android:scaleType="fitCenter"
            android:src="@drawable/leftarrow"
            android:text="Regresar"
            android:visibility="visible"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.0" />

        <TextView
            android:id="@+id/txtu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:fontFamily="@font/quicksand_bold"
            android:gravity="center"
            android:text="UbicaciÃ³n"
            android:textColor="@color/colorWhite"
            android:textSize="25dp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.44"
            app:layout_constraintStart_toEndOf="@+id/btnRegresar"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.083" />


    </androidx.constraintlayout.widget.ConstraintLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="80dp"
        android:text="Latitud"
        android:textColor="@color/colorPrimary"
        android:fontFamily="@font/asap_semibold"
        android:layout_marginStart="50dp"
        android:layout_marginEnd="50dp"
        android:textSize="18sp"
        android:textStyle="bold"/>

    <TextView
        android:id="@+id/txtlatitud"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:fontFamily="@font/asap_semibold"
        android:ems="10"
        android:textSize="18sp"
        android:layout_marginStart="50dp"
        android:layout_marginEnd="50dp"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Longitud"
        android:layout_marginStart="50dp"
        android:fontFamily="@font/asap_semibold"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="50dp"
        android:textColor="@color/colorPrimary"
        android:textSize="18sp"
        android:textStyle="bold"/>

    <TextView
        android:id="@+id/txtlongitud"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:ems="10"
        android:fontFamily="@font/asap_semibold"
        android:textSize="18dp"
        android:layout_marginStart="50dp"
        android:layout_marginEnd="50dp"/>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_gravity="center"
        android:gravity="center"
        android:layout_marginTop="20dp"
        android:orientation="horizontal">

    <Button
        android:id="@+id/btnguardar"
        android:layout_width="215dp"
        android:layout_height="50dp"
        android:background="@drawable/button_bg"
        android:fontFamily="@font/asap_semibold"
        android:textColor="@color/colorWhite"
        android:paddingStart="10dp"
        android:paddingEnd="10dp"
        android:text="Guardar Ubicacion"
        android:drawableStart="@drawable/savelocation"
        android:textAppearance="@style/TextAppearance.AppCompat.Body2"
        android:textSize="18dp"
        android:textStyle="bold" />
        <Button
            android:id="@+id/ShowOnMap"
            android:layout_width="170dp"
            android:layout_height="50dp"
            android:layout_marginStart="5dp"
            android:paddingStart="10dp"
            android:paddingEnd="10dp"
            android:text="Google maps"
            android:drawableStart="@drawable/google"
            android:background="@drawable/button_bg"
            android:fontFamily="@font/asap_semibold"
            android:textColor="@color/colorWhite"
            android:textAppearance="@style/TextAppearance.AppCompat.Body2"
            android:textSize="18dp"
            android:textStyle="bold" />
    </LinearLayout>



</LinearLayout>